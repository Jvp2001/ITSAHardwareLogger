<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" stylesheets="@stylesheets/common.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.itsadigitaltrust.hardwarelogger.views.HardwareLoggerRootView">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER_LEFT">
            <Label minWidth="0.0" text="ID" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                <opaqueInsets>
                    <Insets top="10.0" />
                </opaqueInsets>
                <HBox.margin>
                    <Insets />
                </HBox.margin>
                <padding>
                    <Insets left="10.0" />
                </padding>
            </Label>
            <TextField fx:id="idTextField" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>

            </TextField>
        </HBox>
    </top>
    <bottom>
        <!--        <HBox alignment="CENTER" minHeight="30" BorderPane.alignment="CENTER">-->
        <!--            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>-->
        <!--            <ProgressIndicator progress="0.0">-->
        <!--                <HBox.margin>-->
        <!--                    <Insets right="20.0"/>-->
        <!--                </HBox.margin>-->
        <!--            </ProgressIndicator>-->
        <!--        </HBox>-->
    </bottom>
    <center>

        <VBox prefHeight="Infinity" prefWidth="Infinity" BorderPane.alignment="CENTER">
            <TabPane fx:id="tabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
                <Tab text="General Info">
                    <TableView tableMenuButtonVisible="true">
                        <columns>
                            <TableColumn text="Computer ID" />
                            <TableColumn text="Description" />
                            <TableColumn text="Model" />
                            <TableColumn text="Vendor" />
                            <TableColumn text="Serial" />
                            <TableColumn editable="false" text="OS" />
                        </columns>
                    </TableView>
                </Tab>
                <Tab text="Memory">
                    <VBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER_LEFT">
                            <Label minWidth="0.0" text="Total" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
                            <Label minWidth="0.0" text="16000 MB" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                        <font>
                           <Font size="92.0" />
                        </font></Label>
                            <opaqueInsets>
                                <Insets top="10.0" />
                            </opaqueInsets>
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                            <padding>
                                <Insets bottom="10.0" left="10.0" top="10.0" />
                            </padding>
                        </HBox>
                        <TableView VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn text="Size" />
                                <TableColumn text="Description" />
                            </columns>
                        </TableView>
                    </VBox>
                </Tab>
                <Tab text="HDD">
                    <TableView>
                        <columns>
                            <TableColumn text="Health" />
                            <TableColumn text="Size" />
                            <TableColumn text="Model" />
                            <TableColumn text="Serial" />
                            <TableColumn text="Type" />
                            <TableColumn text="ID" />
                            <TableColumn text="SSD" />
                        </columns>
                    </TableView>
                </Tab>
                <Tab text="Media">
                    <TableView>
                        <columns>
                            <TableColumn text="Description" />
                            <TableColumn text="Handle" />
                        </columns>
                    </TableView>
                </Tab>
                <Tab text="Processors">
                    <TableView>
                        <columns>
                            <TableColumn text="Chip" />
                            <TableColumn text="Speed" />
                            <TableColumn text="Short Description" />
                            <TableColumn text="Long Description" />
                            <TableColumn text="Serial" />
                            <TableColumn text="Width" />
                            <TableColumn text="Cores" />
                        </columns>
                    </TableView>
                </Tab>
            </TabPane>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="reloadButton"  alignment="CENTER" mnemonicParsing="false" onAction="#reload" text="Reload">
                    <HBox.margin>
                        <Insets right="20.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="saveButton" alignment="CENTER" mnemonicParsing="false" text="Save">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Button>
            </HBox>

        </VBox>
    </center>
</BorderPane>
